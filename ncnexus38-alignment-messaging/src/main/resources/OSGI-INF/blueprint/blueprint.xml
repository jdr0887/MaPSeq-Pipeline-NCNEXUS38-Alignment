<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" default-activation="eager">

  <reference id="connectionFactory" interface="javax.jms.ConnectionFactory" />

  <reference id="NCNEXUSBaselineWorkflowBeanService" interface="edu.unc.mapseq.workflow.WorkflowBeanService"
    component-name="NCNEXUSBaselineWorkflowBeanService" />

  <bean id="NCNEXUSBaselineMessageListener" class="edu.unc.mapseq.messaging.ncnexus.baseline.NCNEXUSBaselineMessageListener">
    <property name="workflowBeanService" ref="NCNEXUSBaselineWorkflowBeanService" />
    <property name="workflowName" value="NCNEXUSBaseline" />
  </bean>

  <bean id="NCNEXUSBaselineMessageService" class="edu.unc.mapseq.messaging.ncnexus.baseline.NCNEXUSBaselineMessageService"
    init-method="start" destroy-method="stop" activation="eager">
    <property name="connectionFactory" ref="connectionFactory" />
    <property name="messageListener" ref="NCNEXUSBaselineMessageListener" />
    <property name="destinationName" value="queue/ncnexus.baseline" />
  </bean>

</blueprint>
